@model IEnumerable<JopOffers.Models.JobsViewModel>

@foreach (var gr in Model)
{
    <h3>@gr.JobTitle</h3>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                Searcher Name
            </th>
            <th>
                Message
            </th>
            <th>
                Message Date
            </th>
        </tr>
        @foreach (var item in gr.Items) {
            <tr>
                <td>
                    @item.user.UserName
                </td>
                <td>
                    @item.Message
                </td>
                <td>
                    @item.ApplyDate
                </td>
            </tr>
        }
    </table>
}