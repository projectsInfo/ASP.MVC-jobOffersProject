
@model IEnumerable<JopOffers.Models.Category>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="Silder" style="margin-bottom:50px">
    <!--Start-Slider-->
    <div class="container">
        <div id="mycarousel" class="carousel slide" data-ride="carousel" style="margin-top:-15px">

            <ol class="carousel-indicators">
                <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                <li data-target="#mycarousel" data-slide-to="1"></li>
                <li data-target="#mycarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/images/images (1).jpg" style="width:100%; height:400px" />
                    <div class="carousel-caption">
                        <p>Hello Our Client</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/images.jpg" style="width:100%; height:400px" />
                    <div class="carousel-caption">
                        <p>Hello Our Client</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/images/summer-pictures-high-quality-desktop-free-download.jpg" style="width:100%; height:400px" />
                    <div class="carousel-caption">
                        <p>Hello Our Client</p>
                    </div>
                </div>
            </div>

            <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>

            </a>
            <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>

            </a>

        </div>
    </div>
</div><!--End-Slider-->

    <div class="jumbotron alert alert-info">
        <h1>Welcome our clients</h1>
        <p class="lead">Welcome our clients to our website</p>
        <p><a href="http://asp.net" class="btn btn-primary btn-lg" style="margin-bottom:10px">Learn more &raquo;</a></p>
    </div>

    
    @foreach (var item in Model)
    {
        <div class="panel panel-info">
            <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.CategoryName)</h1></div>
            

            <div class="row panel-body">
                <h5>@Html.DisplayFor(modelItem => item.CategoryDescription)</h5>

                @foreach (var submItem in item.jobs)
                {
                    <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; min-height:400px">
                        <img src="~/Uploads/@submItem.jobImage" style="height:200px; width:100%"/>
                        <h3>@Html.DisplayFor(modelItem => submItem.JobTitle)</h3>
                        <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => submItem.JobContent).ToString()))</h5>
                        @Html.ActionLink("Details", "Details", new { jobId = submItem.Id}, new {@class="btn btn-primary" })
                    </div>

                }
            </div>
        </div>
    }
        


